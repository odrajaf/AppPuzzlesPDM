<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.ugr.fajardo.puzzles.AnimacionActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="484dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/loading"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/buttonMaulla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/sound"
        android:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonJugar"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonJugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMaulla" />
</android.support.constraint.ConstraintLayout>
